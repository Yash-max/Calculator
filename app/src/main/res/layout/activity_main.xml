<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/input"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:focusable="false"
        android:text=""
        android:textIsSelectable="true"
        android:paddingTop="250dp"
        android:paddingBottom="50dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/bksp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="BKSP"
            android:backgroundTint="@android:color/white"
        android:textColor="@color/purple_500"
        android:layout_margin="5dp"/>
        <Button
            android:id="@+id/mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="%"
            android:backgroundTint="@android:color/white"
        android:textColor="@color/purple_500"
        android:layout_margin="5dp"/>
        <Button
            android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="รท"
            android:backgroundTint="@android:color/white"
        android:textColor="@color/purple_500"
        android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/multip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ร"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:text="0"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:backgroundTint="@android:color/white"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>